/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "target": "es2015",
    "lib": ["es2018", "dom"],
    "paths": {
      "@enums/*": ["src/common/enums/*"],
      "@helpers/*": ["src/common/helpers/*"],
      "@models/*": ["src/common/models/*"],
      "@profile/*": ["src/app/profile/*"],
      "@search/*": ["src/app/search/*"],
      "@services/*": ["src/common/services/*"],
      "@common/*": ["src/common/*"],
      "@client/*": ["src/app/*"],
    }
  },
  "angularCompilerOptions": {
    "enableIvy": false
  }
}
